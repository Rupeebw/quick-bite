user nginx;
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    server {
        listen {{ http_port }};
        server_name example.com;

        location / {
            root /var/www/{{ app_name }};
            index index.html;
        }
    }
}


